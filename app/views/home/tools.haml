- content_for :head do
  = set_meta_tags :title => 'Tools'
  
#intro_blurb
  .inner
    #intro_blurb_title
      %span Tools
    #blurb
      Here's what been built with Oil Reporter so far
/ end intro

.clearboth

#breadcrumbs
  .inner
    %p.breadcrumb
      = render_crumbs :seperator => '<span class="breadarrow">/</span>'

#body_block
  .inner
    #primary_full
      .content
        .one_third
          .image_loader
            .reports_img_holder
              .loading_gallery
              / iPhone Oil Reporter
              %a.load_reports_img{ :rel => "lightbox[tools]", :href => "/images/tools/iphone_oil_reporter_large.png" }
                %span.rm_img.noscript
                  %img{ :src => "/images/tools/iphone_oil_reporter_small.png" }
                  %span.roll_over.rollover
            %h3.reports iPhone Reporter
            %span
              %a.button_link{ :href => "http://itunes.apple.com/app/oil-reporter/id372961637?mt=8" }
                %span
                  Download Now
          .clearboth
        / end one_third
      
      .one_third
        .image_loader
          .reports_img_holder
            .loading_gallery
            / Android Oil Reporter
            %a.load_reports_img{ :rel => "lightbox[tools]", :href => "/images/tools/android_oil_reporter_large.png" }
              %span.rm_img.noscript
                %img{ :src => "/images/tools/android_oil_reporter_small.png" }
                %span.roll_over.rollover
          %h3.reports Android Reporter
          %span
            %a.button_link{ :href => "http://www.androidzoom.com/android_applications/news_and_weather/oil-reporter_gxif.html", :target => "_blank" }
              %span
                Download Now
        .clearboth
      / end one_third
      
      .one_third.last
        .image_loader
          .reports_img_holder
            .loading_gallery
            / Oil Tracker
            %a.load_reports_img{ :rel => "lightbox[tools]", :href => "/images/tools/iphone_oil_tracker_large.png" }
              %span.rm_img.noscript
                %img{ :src => "/images/tools/iphone_oil_tracker_small.png" }
                %span.roll_over.rollover
          %h3.reports iPhone Tracker
          %span
            %a.button_link{ :href => "http://github.com/kwhinnery/OilTracker", :target => "_blank" }
              %span
                Download Now
        .clearboth
      / end one_third