%html
  %head{ :profile => "http://gmpg.org/xfn/11" }
    :erb
      <script type="text/javascript">var _sf_startpt=(new Date()).getTime()</script>
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "content-type" }
