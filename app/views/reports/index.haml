= render :partial => 'shared/header'

#main
  #path
    You are here:
    = link_to 'Home', reports_url
    >>
    %h1 Oil Reports
  
  #content
    #reports.container_12
      .block
        .block_head
          %h2 Reports
        .block_content
          %table{ :cellpadding => "0", :cellspacing => "0", :width => "100%" }
            %tr
              %th
                Date
              %th
                Description
              %th
                Wildlife
              %th
                Oil
              %th
                Wetlands
              %th
                Media
            - for report in @reports do
              %tr{:class => cycle("even", "odd")}
                %td
                  = report.created_at.strftime('%m.%d.%Y')
                %td
                  = truncate(report.description, :length => 25)
                %td
                  = report.oil
                %td
                  = report.wetlands
                %td
                  = report.media? ? image_tag(report.media(:tiny)) : image_tag('http://placehold.it/50x50')           

          / Pagination if needed
          / .pagination.right
          /   %a{ :href => "#" }
          /     &laquo;
          /   %a{ :href => "#", :class => "active" }
          /     1
          /   %a{ :href => "#" }
          /     2